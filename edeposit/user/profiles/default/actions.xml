<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
  <object name="user">
    <object name="join" meta_type="CMF Action" i18n:domain="plone">
      <property name="title" i18n:translate="">Register</property>
      <property name="description" i18n:translate=""/>
      <property name="url_expr">string:${globals_view/navigationRootUrl}/@@register</property>
      <property name="link_target"/><property name="icon_expr"/>
      <property name="available_expr">python:member is None</property>
      <property name="permissions">
	<element value="Add portal member"/>
      </property>
      <property name="visible">False</property>
    </object>

    <object name="join_without_agreement" meta_type="CMF Action" i18n:domain="edeposit.user">
      <property name="title" i18n:translate="">Register without agreement</property>
      <property name="description" i18n:translate=""></property>
      <property name="url_expr">string:$portal_url/@@register</property>
      <property name="icon_expr"></property>
      <property name="available_expr">python:member is None</property>
      <property name="permissions">
	<element value="Public, everyone can access"/>
      </property>
      <property name="visible">True</property>
    </object>    

    <object name="join_with_agreement" meta_type="CMF Action" i18n:domain="edeposit.user">
      <property name="title" i18n:translate="">Register with agreement</property>
      <property name="description" i18n:translate=""></property>
      <property
	  name="url_expr">string:$portal_url/@@register</property>
      <property name="link_target"></property>
      <property name="icon_expr"></property>
      <property name="available_expr">python:member is None</property>
      <property name="permissions">
	<element value="Public, everyone can access"/>
      </property>
      <property name="visible">True</property>
    </object>
  </object>
</object>
